# Porta su cui gira l'applicazione Express
PORT=3000

# Configurazione del database (es. MongoDB o PostgreSQL)
MONGO_URI=mongodb://localhost:27017/incrowd

# Chiave segreta per la gestione di token JWT o altre funzionalit√† di sicurezza
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Ambiente in cui gira l'applicazione: development, production, ecc.
NODE_ENV=development

# Credenziali Admin
ADMIN_EMAIL=admin@incrowd.com
ADMIN_PASSWORD=admin123!

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Security Controls (default: true, set to false for easier development)
ENABLE_SECURITY_CONTROLS=true
